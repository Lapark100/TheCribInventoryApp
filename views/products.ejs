<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Scripts -->
    <script src="https://kit.fontawesome.com/cae296929f.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300..700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="./products.css">


    <title>Products</title>
    <link
        href="data:image/x-icon;base64,"
        rel="icon" type="image/x-icon">
</head>

<body>

    <div id="preloader">
        <div class="spinner"></div>
    </div>

    <div id="content" style="display: none;" class="dashboard-container">
        <div class="navigation">
            <div class="logo">
                <h1 class="logo-header">
                    CA
                </h1>
            </div>
            <div class="nav-links">

                <a href="/home">
                    Dashboard
                </a>
                <a href="/products">
                    Products
                </a>
                <a>
                    Users
                </a>
                <a>
                    Requests
                </a>
            </div>
            
        </div>
        <div class="welcome-header">
            <h1>Products</h1>
            <form action="/add-products" method="get">

                <button type="submit" class="add-products">
                    <i class="fa-solid fa-plus plus"></i>
                    Add Products
                </button>

            </form>

        </div>
        <div class="master-card-container">
            <div class="card-container">
                <div class="dashboard-card">
                    <div class="dc-figures">
                        <div>
                            <div class="dc-icon">
                                <i class="fa-solid fa-cube dci"></i>
                            </div>
                            <h3 class="dc-header">
                                Total Products
                            </h3>
                        </div>

                        <div class="products-total">
                            <h2 class="product-total-header">
                                <%= products.length%>
                            </h2>
                            <p class="pt-paragraph">
                                units
                            </p>
                        </div>
                    </div>

                </div>
            </div>
            <div class="card-container">
                <div class="dashboard-card">
                    <div class="dc-figures">
                        <div>
                            <div class="dc-icon">
                                <i class="fa-solid fa-user dci"></i>
                            </div>
                            <h3 class="dc-header">
                                Total Users
                            </h3>
                        </div>

                        <div class="products-total">
                            <h2 class="product-total-header">
                                <%=noUsers%>
                            </h2>
                            <p class="pt-paragraph">
                                user(s)
                            </p>
                        </div>
                    </div>

                </div>
            </div>
            <div class="card-container">
                <div class="dashboard-card">
                    <div class="dc-figures">
                        <div>
                            <div class="dc-icon">
                                <i class="fa-solid fa-hand dci"></i>
                            </div>
                            <h3 class="dc-header">
                                Total Requests
                            </h3>
                        </div>

                        <div class="products-total">
                            <h2 class="product-total-header">
                                69
                            </h2>
                            <p class="pt-paragraph">
                                Requests
                            </p>
                        </div>
                    </div>

                </div>
            </div>
            <div class="card-container">
                <div class="dashboard-card">
                    <div class="dc-figures">
                        <div>
                            <div class="dc-icon">
                                <i class="fa-solid fa-copyright dci"></i>
                            </div>
                            <h3 class="dc-header">
                                Total Brands
                            </h3>
                        </div>

                        <div class="products-total">
                            <h2 class="product-total-header">
                                400
                            </h2>
                            <p class="pt-paragraph">
                                Brands
                            </p>
                        </div>
                    </div>

                </div>
            </div>
            <div>

            </div>
        </div>
        <div class="products-table-container">
            <div class="ptc-header">
                <h3>
                Select Category
                </h3>
                <form action="/products" method="GET"> 
                    <button type="submit" name="category" value="toiletries">
                        toiletries
                    </button>
                </form>
                
                <div class="products-table-holder">
                    <div class="products-table-headings">
                        <p> ID</p>
                        <p>Name</p>
                        <p>Price</p>
                        <p>Stock</p>
                    </div>
                </div>
            </div>

                <% products.forEach((product) => { %>
                    <div class="products-table-contents">
                        <p >
                           <%= product.id%>
                        </p>
                        <div class="custom-name">
                            <p>
                                <%= product.name%>
                            </p>
                        </div>
                        <div class="custom-p">
                            <p>
                                <%= product.cost_price%>
                            </p>
                        </div>
                        <p class="last-item">
                            <%= product.quantity%>
                        </p>
                    </div>
               <% })%>
                
                





        </div>

        <footer>
            <p>
                Â©2024 Copyright Park Technologies
            </p>
        </footer>

        <script>

            // window.addEventListener('load', function() {
            //             document.getElementById('preloader').style.display = 'none';
            //             document.getElementById('content').style.display = 'block';
            //         });

            window.addEventListener('load', function () {
                const MIN_LOAD_TIME = 2000; // Minimum load time in milliseconds (e.g., 2000ms = 2 seconds)
                const loadTime = Date.now() - performance.timing.navigationStart;

                if (loadTime < MIN_LOAD_TIME) {
                    setTimeout(() => {
                        document.getElementById('preloader').style.display = 'none';
                        document.getElementById('content').style.display = 'block';
                    }, MIN_LOAD_TIME - loadTime);
                } else {
                    document.getElementById('preloader').style.display = 'none';
                    document.getElementById('content').style.display = 'block';
                }
            });
        </script>

</body>

</html>